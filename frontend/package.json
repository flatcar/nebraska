{
  "name": "Nebraska",
  "description": "Nebraska is an update manager for Flatcar Container Linux.",
  "private": true,
  "version": "0.1.0",
  "license": {
    "type": "Apache-2.0",
    "url": "http://www.apache.org/licenses/LICENSE-2.0"
  },
  "repository": "https://github.com/flatcar/nebraska",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint . && prettier --config package.json --check src/ e2e/",
    "format": "prettier --config package.json --write src/ e2e/",
    "i18n": "npx --no-install i18next ./src/**/ts* ./src/**/**/*.ts* ./src/**/**/**/*.ts* -c ./src/i18n/i18next-parser.config.js",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "test": "cross-env TEST_TZ=true vitest --silent",
    "test:coverage": "cross-env TEST_TZ=true vitest --silent --coverage --environment=jsdom --reporter=default --coverage.dir=coverage/report",
    "build-storybook:ci": "cross-env NODE_ENV=test storybook build --quiet",
    "serve-storybook:ci": "npm exec -- http-server storybook-static --port 6006 --silent",
    "test-storybook:ci": "npx wait-on tcp:127.0.0.1:6006 && cross-env NODE_ENV=test TZ=UTC test-storybook",
    "build-storybook": "storybook build",
    "storybook": "storybook dev -p 6006",
    "tsc": "tsc",
    "build-icons": "node tools/build-icons.js ./src/img ./src/icons && npm run format"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^7.1.0",
    "@mui/material": "^7.1.0",
    "@mui/styled-engine-sc": "^7.1.0",
    "@mui/styles": "^6.5.0",
    "@mui/system": "^7.1.0",
    "@mui/utils": "^7.1.0",
    "@reduxjs/toolkit": "^2.8.2",
    "@types/dompurify": "^3.2.0",
    "@types/node": "^24.2.1",
    "@types/pubsub-js": "^1.8.6",
    "@types/react-color": "^3.0.13",
    "@types/react-window": "^1.8.8",
    "@types/semver": "^7.7.0",
    "@types/yup": "^0.32.0",
    "cross-env": "^10.0.0",
    "dompurify": "^3.2.6",
    "downshift": "^9.0.10",
    "eventemitter3": "^5.0.1",
    "formik": "^2.4.6",
    "formik-mui": "^4.0.0",
    "i18next": "^25.3.4",
    "i18next-browser-languagedetector": "^8.0.4",
    "jwt-decode": "^4.0.0",
    "moment-timezone": "^0.6.0",
    "prop-types": "^15.8.1",
    "pubsub-js": "^1.9.5",
    "react": "19.1.1",
    "react-color": "^2.19.3",
    "react-dom": "19.1.1",
    "react-i18next": "^15.6.1",
    "react-redux": "^9.2.0",
    "react-router": "^7.8.0",
    "react-window": "^1.8.11",
    "recharts": "^3.1.0",
    "semver": "^7.7.1",
    "underscore": "^1.13.7",
    "yup": "^1.7.0"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.1",
    "@iconify/icons-mdi": "^1.2.48",
    "@iconify/react": "^6.0.0",
    "@iconify/tools": "^4.1.2",
    "@playwright/test": "1.54.2",
    "@storybook/addon-docs": "^9.1.0",
    "@storybook/addon-links": "^9.1.0",
    "@storybook/react-vite": "^9.1.0",
    "@storybook/test-runner": "^0.24.0-next.1",
    "@testing-library/react": "^16.3.0",
    "@types/glob": "^9.0.0",
    "@types/pg": "^8.15.5",
    "@types/react": "19.1.9",
    "@types/react-dom": "19.1.7",
    "@types/react-router-dom": "^5.3.3",
    "@types/underscore": "^1.13.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-istanbul": "^3.1.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-storybook": "^9.1.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.3.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "i18next-parser": "^9.3.0",
    "jsdom": "^26.0.0",
    "lint-staged": "^16.1.5",
    "pg": "^8.14.1",
    "playwright": "1.54.2",
    "prettier": "^3.6.2",
    "storybook": "^9.0.14",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.39.0",
    "vite": "^7.1.1",
    "vitest": "^3.2.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint -c package.json --fix"
    ],
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --config package.json --write"
    ],
    "e2e/**/*.{js,jsx,ts,tsx}": [
      "eslint -c package.json --fix"
    ],
    "e2e/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --config package.json --write"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "singleQuote": true,
    "semi": true,
    "printWidth": 100,
    "trailingComma": "es5"
  },
  "overrides": {
    "i18next-parser": {
      "engines": {
        "node": "^18.0.0 || ^20.0.0 || ^22.0.0 || ^24.0.0"
      }
    }
  }
}
