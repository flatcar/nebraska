  "dependencies": {
    "bootstrap": "^3.4.1",
    "flux": "~2.1.1",
    "jquery": "~2.1.4",
    "moment": "~2.10.6",
    "moment-timezone": "~0.4.1",
    "progressbar.js": "~0.9.0",
    "prop-types": "^15.7.2",
    "pubsub-js": "~1.5.3",
    "rc-switch": "^1.9.0",
    "react": "^16.8.6",
    "react-bootstrap": "^0.32.4",
    "react-color": "^2.17.3",
    "react-dom": "^16.8.6",
    "react-router-bootstrap": "^0.23.3",
    "react-router-dom": "^5.0.1",
    "react-search-input": "^0.11.3",
    "react-select": "^2.4.4",
    "react-spinners": "^0.5.12",
    "semver": "~5.3.0",
    "underscore": "~1.8.3",
    "valid-url": "^1.0.9"
  },
  "devDependencies": {
    "babelify": "~6.3.0",
    "browserify": "~11.2.0",
    "catw": "~1.0.1",
    "envify": "~3.4.0",
    "less": "~3.0.1",
    "less-plugin-clean-css": "~1.5.1",
    "reactify": "~1.1.1",
    "node-sass": "~4.12.0",
    "uglify-js": "~2.4.24",
    "uglifyify": "~3.0.1",
    "watchify": "~3.4.0"
  },
  "scripts": {
    "copy-css": "cp -R src/css/*.css ./built/css/",
    "watch-css": "node-sass src/style/styles.scss ./built/css/styles.css",
    "watch-js": "watchify src/js/main.js -o ./built/js/main.js -dv",
    "watch": "npm run watch-css && npm run watch-js",
    "build-external-css": "lessc src/style/external-styles.less > ./built/css/external-styles.css",
    "build-css": "node-sass src/style/styles.scss ./built/css/styles.css",
    "build-js": "browserify -g uglifyify src/js/*.js > ./built/js/main.js",
    "build": "npm run build-external-css & npm run build-css & npm run build-js && npm run copy-css"
  },
  "browserify": {
    "transform": [
      "babelify",
      "reactify",
      "envify"
    ]
  }
}
